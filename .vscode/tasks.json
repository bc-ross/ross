{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "label": "rust: cargo build"
        },
        {
            "type": "cargo",
            "command": "run",
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1",
                }
            },
            "problemMatcher": [
                "$rustc"
            ],
            "label": "rust: cargo run",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}