{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "post",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "label": "rust: cargo build"
        },
        {
            "label": "rust: run debug",
            "type": "shell",
            "command": "${workspaceFolder}/target/debug/your_binary_name",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "rust: cargo build"
        }
    ]
}